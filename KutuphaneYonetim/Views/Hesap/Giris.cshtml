@{
    ViewData["Title"] = "Kütüphane Girişi";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<head>
    <style>
        body {
            background-image: url('/images/arka-plan.jpg'); /* Resim yolu */
            background-size: cover;
            background-position: center;
            background-repeat: no-repeat;
            height: 100vh;
            margin: 0;
            font-family: 'Arial', sans-serif;
            position: relative;
        }

            body::before {
                content: '';
                position: absolute;
                top: 0;
                left: 0;
                width: 100%;
                height: 100%;
                background-color: rgba(0, 0, 0, 0.5); /* Siyah yarı saydam katman */
                z-index: -1;
            }

        h2.text-center {
            margin-top: 20px; /* Üstten boşluk */
            text-align: center;
            color: #1DB954;
            text-shadow: 0px 0px 10px rgba(29, 185, 84, 0.8);
        }

        .container {
            position: relative;
            z-index: 1; /* Kart ve içerik ön planda */
        }

        .card {
            background-color: rgba(0, 0, 0, 0.8);
            border-radius: 15px;
            color: white;
        }
    </style>
</head>


<div class="container mt-5">
    <h2 class="text-center mb-4" style="color: #1DB954; text-shadow: 0px 0px 10px rgba(29, 185, 84, 0.8);">
        Kütüphane Girişi
    </h2>
    <div class="row justify-content-center">
        <div class="col-md-6 col-lg-4">
            <div class="card shadow-lg p-4" style="background: linear-gradient(145deg, #202020, #282828); border-radius: 15px;">
                <form method="post" asp-controller="Hesap" asp-action="Giris">
                    <div class="form-group">
                        <label for="kullaniciAdi" style="color: white;">Kullanıcı Adı</label>
                        <input type="text" class="form-control" id="kullaniciAdi" name="kullaniciAdi" required placeholder="Kullanıcı adınızı giriniz" style="background-color: #333; color: white; border: none; border-radius: 5px;">
                    </div>
                    <div class="form-group mt-3">
                        <label for="sifre" style="color: white;">Şifre</label>
                        <input type="password" class="form-control" id="sifre" name="sifre" required placeholder="Şifrenizi giriniz" style="background-color: #333; color: white; border: none; border-radius: 5px;">
                    </div>
                    @if (ViewBag.Hata != null)
                    {
                        <div class="alert alert-danger mt-3">@ViewBag.Hata</div>
                    }
                    <button type="submit" class="btn mt-4 w-100" style="background: linear-gradient(90deg, #1DB954, #1ED760); color: white; border: none; border-radius: 5px; box-shadow: 0px 4px 15px rgba(29, 185, 84, 0.4);">
                        Giriş Yap
                    </button>
                </form>
                <a href="/Hesap/Kayit" class="btn mt-3 w-100" style="background: linear-gradient(90deg, #3E3E3E, #4B4B4B); color: white; border: none; border-radius: 5px;">Kayıt Ol</a>
            </div>
        </div>
    </div>
</div>


