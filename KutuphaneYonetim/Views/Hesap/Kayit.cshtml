@{
    ViewData["Title"] = "Kayıt Ol";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<style>
    body {
        background-image: url('/images/arka-plan.jpg'); /* Resim yolu */
        background-size: cover;
        background-position: center;
        background-repeat: no-repeat;
        height: 100vh;
        margin: 0;
        font-family: 'Arial', sans-serif;
        position: relative;
    }

        body::before {
            content: '';
            position: absolute;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            background-color: rgba(0, 0, 0, 0.5); /* Siyah yarı saydam katman */
            z-index: -1;
        }
</style>

<div class="container mt-5">
    <h2 class="text-center mb-4" style="color: #34c759; text-shadow: 0px 0px 10px rgba(52, 199, 89, 0.8);">Kayıt Ol</h2>
    <div class="row justify-content-center">
        <div class="col-md-6 col-lg-4">
            <div class="card shadow-lg p-4" style="background: linear-gradient(145deg, #202020, #282828); border-radius: 15px;">
                <form method="post" asp-controller="Hesap" asp-action="Kayit">
                    <div class="form-group">
                        <label for="KullaniciAdi" style="color: white;">Kullanıcı Adı</label>
                        <input type="text" class="form-control" id="KullaniciAdi" name="KullaniciAdi" required placeholder="Kullanıcı adınızı giriniz" style="background-color: #333; color: white; border: none; border-radius: 5px;">
                    </div>
                    <div class="form-group mt-3">
                        <label for="Sifre" style="color: white;">Şifre</label>
                        <input type="password" class="form-control" id="Sifre" name="Sifre" required placeholder="Şifrenizi oluşturunuz" style="background-color: #333; color: white; border: none; border-radius: 5px;">
                    </div>
                    @if (ViewBag.Hata != null)
                    {
                        <div class="alert alert-danger mt-3">@ViewBag.Hata</div>
                    }
                    <button type="submit" class="btn mt-4 w-100" style="background: linear-gradient(90deg, #34c759, #42d67d); color: white; border: none; border-radius: 5px; box-shadow: 0px 4px 15px rgba(52, 199, 89, 0.4);">Kayıt Ol</button>
                </form>
                <a href="/Hesap/Giris" class="btn mt-3 w-100" style="background: linear-gradient(90deg, #3E3E3E, #4B4B4B); color: white; border: none; border-radius: 5px;">Giriş Yap</a>
            </div>
        </div>
    </div>
</div>
